<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="30dp">

    <TextView
        android:id="@+id/tvTurnOffData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Turn Off\nMobile Data"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/tvOk"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:text="OK"
        app:layout_constraintEnd_toEndOf="@id/tvTurnOffData"
        app:layout_constraintStart_toStartOf="@id/tvTurnOffData"
        app:layout_constraintTop_toBottomOf="@id/tvTurnOffData" />

</androidx.constraintlayout.widget.ConstraintLayout>