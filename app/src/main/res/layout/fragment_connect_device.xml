<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ConnectDeviceFragment">

    <ImageView
        android:id="@+id/ivAddDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="5dp"
        android:src="@drawable/ic_add_device"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvNoDeviceConnected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="32dp"
            android:gravity="center"
            android:text="No Plunge Device Connected"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tv_ConnectedDeviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_right_arrow"
            android:drawablePadding="32dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="22dp" />

        <Button
            android:id="@+id/bt_RemoveConnectedDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:text="Remove This Device" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>